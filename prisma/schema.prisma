// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Medico {
  id             Int    @id      @default(autoincrement())
  nome           String
  crm            Int    @unique
  fixo           Int
  celular        Int    @unique
  cep            Int
  especialidades Especialidade[]
  endereco Endereco?
}

model Especialidade{
  id     Int      @id     @default(autoincrement())
  nome   String   @unique
  medicos Medico[]
}

model Endereco{
  id          Int     @id     @default(autoincrement())
  rua         String
  complemento String?
  bairro      String
  cidade      String
  uf          String
  medico      Medico  @relation(fields: [medicoId], references: [id])
  medicoId    Int
}
